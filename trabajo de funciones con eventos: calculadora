<script>
  var acumulado= 0;
  var digit= "";
  var sumar= false;
  var restar=false;
  var multi=false;
  var dividir=false;
  function display_numeros(numero){                     //esta funcion permite ingresar los digitos en el display, utilizando la variable digit concatenandola con el parametro numero, permite ingresar en el display todos los digitos que queramos
    document.getElementById("display").value=digit+numero;
    digit=document.getElementById("display").value;
  }
  function suma(){
    acumulado= acumulado + parseFloat(digit);
    document.getElementById("display").value=acumulado;
    digit="";
    sumar= true;
  }
  function resta(){
    acumulado= acumulado - parseFloat(digit);
    document.getElementById("display").value=acumulado;
    digit="";
    restar= true;
  }
  function multiplicar(){
    acumulado= acumulado * parseFloat(digit);
    document.getElementById("display").value=acumulado;
    digit="";
    multi= true;
  }
  function dividir(){
    acumulado= acumulado / parseFloat(digit);
    document.getElementById("display").value=acumulado;
    digit="";
    dividir=true;
  }
  function resultado(){
    if(sumar){
      document.getElementById("display").value=acumulado + parceFloat("digit");
    }
    else if(restar){
      document.getElementById("display").value=acumulado - parceFloat("digit");
    }
    else if(multi){
      document.getElementById("display").value=acumulado * parceFloat("digit");
    }
    else if(dividir){
      document.getElementById("display").value=acumulado / parceFloat("digit");
    }
  }
</script>
